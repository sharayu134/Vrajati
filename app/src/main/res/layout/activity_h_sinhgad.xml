<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".h_sinhgad"

    android:background="@drawable/pune_bk"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    >


    <ImageView
        android:id="@+id/imageView6sd"
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/h_sinhgad"

        />

    <TextView
        android:id="@+id/textView14sd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sinhagad is a hill fortress located at around 36 km southwest of the city of Pune, India. Some of the information available at this fort suggests that the fort could have been built 2000 years ago. The caves and the carvings in the Kaundinyeshwar temple stand as proofs for the same.
Address: Sinhagad Ghat Road, Dist Pune, Thoptewadi, Maharashtra 411025
"

android:layout_above="@id/textView15sd"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView6sd"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView15sd"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_above="@+id/textView17sd"
        android:layout_alignParentStart="true"
        android:background="@color/AntiqueWhite"
        android:text="Opening Hours:"
        android:textAlignment="center"
        android:textColor="@color/Sienna"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView16sd"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView15sd"
        android:background="@color/AntiqueWhite"
        android:text="Entry Fees:"
        android:textAlignment="center"
        android:textColor="@color/Sienna"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView17sd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button7sd"
        android:layout_alignParentStart="true"
        android:text="                   Everyday
                   5am to 6pm "
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/textView18sd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15sd"
        android:layout_toEndOf="@+id/textView15sd"
        android:text="   No entry fees"
        android:textColor="@color/MidnightBlue" />

    <Button
        android:id="@+id/button7sd"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="0dp"
        android:background="@drawable/map"

        android:textColor="@color/AntiqueWhite"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button8sd"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button7sd"
        android:layout_toEndOf="@+id/textView15sd"
        android:text="More Information"
        android:textColor="@color/Sienna"
        android:background="@color/AntiqueWhite"/>

    <Button
        android:id="@+id/button9sd"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/textView15sd"
        android:text="Add to favorites"
        android:textColor="@color/Sienna"
        android:background="@color/AntiqueWhite"
        android:onClick="displayToast"
        />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Get Direction"
        android:background="@color/AntiqueWhite"
        android:textColor="@color/Sienna"
        android:textAlignment="center"/>
</RelativeLayout>