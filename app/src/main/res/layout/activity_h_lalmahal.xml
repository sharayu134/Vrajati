<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".h_lalmahal"

    android:background="@drawable/pune_bk"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    >


    <ImageView
        android:id="@+id/imageView6l"
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/h_lalmahal"

        />

    <TextView
        android:id="@+id/textView14l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
android:layout_above="@id/textView15l"
        android:layout_below="@+id/imageView6l"
        android:text="The Lal Mahal of Pune is one of the most famous monuments located in Pune, India. In the year 1630 AD, Shivaji Maharaj's Father Shahaji Bhosale, established the Lal Mahal for his wife Jijabai and son. Shivaji Maharaj stayed here for several years until he captured his first fort.
Address: Shivaji Road, Durvankur Society, Kasba Peth, Pune, Maharashtra 411011
"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView15l"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_above="@+id/textView17l"
        android:layout_alignParentStart="true"
        android:background="@color/AntiqueWhite"
        android:text="Opening Hours:"
        android:textAlignment="center"
        android:textColor="@color/Sienna"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView16l"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView15l"
        android:background="@color/AntiqueWhite"
        android:text="Entry Fees:"
        android:textAlignment="center"
        android:textColor="@color/Sienna"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView17l"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button7l"
        android:layout_alignParentStart="true"
        android:text="                   Everyday
                9am to 6pm "
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/textView18l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15l"
        android:layout_toEndOf="@+id/textView15l"
        android:text="   Indian:Rs.15
   Foreigner:Rs.125 "
        android:textColor="@color/MidnightBlue" />

    <Button
        android:id="@+id/button7l"
        android:layout_width="201dp"
        android:layout_height="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:background="@drawable/map"
        android:textColor="@color/AntiqueWhite"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button8l"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button7l"
        android:background="@color/AntiqueWhite"
        android:text="More Information"
        android:textColor="@color/Sienna" />

    <Button
        android:id="@+id/button9l"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/AntiqueWhite"
        android:text="Add to favorites"
        android:textColor="@color/Sienna"
        android:onClick="displayToast"
        />

    <TextView
        android:id="@+id/textView19l"
        android:layout_width="200dp"
        android:layout_height="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/AntiqueWhite"
        android:text="Get Location"
        android:textAlignment="center"
        android:textColor="@color/Sienna"
        android:textSize="18dp" />
</RelativeLayout>