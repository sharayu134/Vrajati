<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".h_vishram"

    android:background="@drawable/pune_bk"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    >


    <ImageView
        android:id="@+id/imageView6v"
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/h_vishram"

        />

    <TextView
        android:id="@+id/textView14v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView15v"
        android:text="Vishrambaag Wada, a fine mansion situated at central Pune's Thorale Bajirao Road,was the luxurious residence of Peshwa Bajirao II, the last Peshwa of Maratha confederacy, in early nineteenth century. The 20,000 sq. ft. wada presently houses a post office on its ground floor, a few other offices of the municipal corporation and a small museum of Maratha artefacts put together by noted Maratha historian, Babasaheb Purandare."
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView6v"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView15v"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_above="@+id/textView17v"
        android:layout_alignParentStart="true"
        android:background="@color/AntiqueWhite"
        android:text="Opening Hours:"
        android:textAlignment="center"
        android:textColor="@color/Sienna"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView16v"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView15v"
        android:background="@color/AntiqueWhite"
        android:text="Entry Fees:"
        android:textAlignment="center"
        android:textColor="@color/Sienna"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView17v"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button7v"
        android:layout_alignParentStart="true"
        android:text="                   Everyday
                10am to 7pm "
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/textView18v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15v"
        android:layout_toEndOf="@+id/textView15v"
        android:text="   No Entry Fees "
        android:textColor="@color/MidnightBlue" />

    <Button
        android:id="@+id/button7v"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="0dp"
        android:background="@drawable/map"
        android:textColor="@color/AntiqueWhite"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button8v"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button7v"
        android:layout_toEndOf="@+id/textView15v"
        android:text="More Information"
        android:textColor="@color/Sienna"
        android:background="@color/AntiqueWhite"/>

    <Button
        android:id="@+id/button9v"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/textView15v"
        android:text="Add to favorites"
        android:textColor="@color/Sienna"
        android:background="@color/AntiqueWhite"
        android:onClick="displayToast"
        />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Get Direction"
        android:background="@color/AntiqueWhite"
        android:textColor="@color/Sienna"
        android:textAlignment="center"/>
</RelativeLayout>