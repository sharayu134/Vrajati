<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".m_shivaji"

    android:background="@drawable/pune_bk"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    >


    <ImageView
        android:id="@+id/imageView6sss"
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/m_shvaji"

        />

    <TextView
        android:id="@+id/textView14sss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@id/textView15sss"
        android:layout_below="@+id/imageView6sss"
android:text="Chhatrapati Shivaji Maharaj Museum of Indian History (CSMMIH) is a private historical museum constructed by Francois Gautier since January 14, 2012 under the banner of his not-for-profit organization, Foundation For Advancement of Cultural Ties (FACT). The first phase the museum was inaugurated by Sri Sri Ravi Shankar and endorsed by Mrs Ajit Pawar and Nitin Gadkari.[1] In addition to various exhibits the museum also has a digital library on their website that has hundreds of books on Indian history and culture that are easily accessible and available for everyone."        android:textColor="@color/colorPrimaryDark"
        android:autoSizeMaxTextSize="23dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView15sss"
        android:layout_width="200dp"
        android:layout_height="22dp"
        android:layout_above="@+id/textView17sss"
        android:layout_alignParentStart="true"
        android:background="@color/AntiqueWhite"
        android:text="Opening Hours:"
        android:textAlignment="center"
        android:textColor="@color/Sienna"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView16sss"
        android:layout_width="200dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView15sss"
        android:background="@color/AntiqueWhite"
        android:text="Entry Fees:"
        android:textAlignment="center"
        android:textColor="@color/Sienna"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView17sss"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button7sss"
        android:layout_alignParentStart="true"
        android:text="                   Everyday
                10.15am to 6pm "
        android:textColor="@color/MidnightBlue" />

    <TextView
        android:id="@+id/textView18sss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15sss"
        android:layout_toEndOf="@+id/textView15sss"
        android:text="   Indian:Rs.60
   Foreigner:Rs.300 "
        android:textColor="@color/MidnightBlue" />

    <Button
        android:id="@+id/button7sss"
        android:layout_width="201dp"
        android:layout_height="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:background="@drawable/map"
        android:textColor="@color/AntiqueWhite"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button8sss"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button7sss"
        android:layout_toEndOf="@+id/textView15sss"
        android:text="More Information"
        android:textColor="@color/Sienna"
        android:background="@color/AntiqueWhite"/>

    <Button
        android:id="@+id/button9sss"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/textView15sss"
        android:text="Add to favorites"
        android:textColor="@color/Sienna"
        android:background="@color/AntiqueWhite"
        android:onClick="displayToast"
        />

    <TextView
        android:id="@+id/textView19sss"
        android:layout_width="200dp"
        android:layout_height="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Get Direction"
        android:textAlignment="center"
        android:textColor="@color/Sienna"
        android:background="@color/AntiqueWhite"
        android:textSize="18dp" />
</RelativeLayout>